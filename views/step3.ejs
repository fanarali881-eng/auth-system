<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f5f5f5;
            direction: rtl;
            text-align: right;
        }
        
        /* Gray container - نفس لون step2Q */
        .well {
            background-color: #f5f5f5;
            border: 1px solid #e3e3e3;
            border-radius: 4px;
            padding: 30px;
            margin-bottom: 20px;
        }
        
        .page-header {
            border-bottom: 2px solid #8b1538;
            margin-top: 0;
            margin-bottom: 25px;
            padding-bottom: 10px;
        }
        
        .page-header h1 {
            color: #000;
            font-size: 24px;
            font-weight: bold;
            margin: 0;
        }
        
        /* Password requirements section */
        .password-requirements {
            background-color: #fff;
            border: 1px solid #ddd;
            border-radius: 5px;
            padding: 15px;
            margin-bottom: 25px;
        }
        
        .password-requirements h4 {
            color: #333;
            font-size: 16px;
            font-weight: bold;
            margin-top: 0;
            margin-bottom: 15px;
        }
        
        .requirement {
            padding: 5px 0;
            color: #666;
            font-size: 14px;
        }
        
        .requirement.valid {
            color: #5cb85c;
        }
        
        .requirement .icon {
            display: inline-block;
            width: 20px;
            margin-left: 10px;
        }
        
        .requirement.valid .icon:before {
            content: "✓";
            color: #5cb85c;
            font-weight: bold;
            font-size: 18px;
        }
        
        .form-group label {
            font-weight: bold;
            color: #333;
        }
        
        .form-control {
            border-radius: 4px;
            border: 1px solid #ccc;
            padding: 10px;
            font-size: 14px;
        }
        
        .form-control:focus {
            border-color: #8b1538;
            box-shadow: 0 0 5px rgba(139, 21, 56, 0.3);
        }
        
        .btn-primary {
            background-color: #8b1538;
            border-color: #8b1538;
            padding: 10px 30px;
            font-size: 16px;
            font-weight: bold;
        }
        
        .btn-primary:hover {
            background-color: #6d1029;
            border-color: #6d1029;
        }
        
        .btn-default {
            padding: 10px 30px;
            font-size: 16px;
        }
        
        .button-group {
            margin-top: 30px;
            text-align: center;
        }
        
        .button-group .btn {
            margin: 0 10px;
        }
        
        .text-danger {
            color: #a94442;
        }
        
        .help-block {
            display: block;
            margin-top: 5px;
            margin-bottom: 10px;
            color: #737373;
        }
    </style>
</head>
<body>
    <%- include('partials/header') %>
    
    <main>
        <div class="container">
            <div class="row" id="main-content">
                <div class="col-sm-1"></div>
                <div class="col-sm-10">
                    
                    <div class="help-block"></div>
                    <%- include('partials/progress') %>
                    
                    <div class="well">
                        <form id="passwordForm" class="form-horizontal" method="POST" action="/step3">
                            <div class="page-header">
                                <h1>إنشاء كلمة المرور</h1>
                            </div>
                            
                            <!-- شروط كلمة المرور -->
                            <div class="password-requirements">
                                <h4>ضبط كلمة المرور</h4>
                                <div class="requirement" id="req-lowercase">
                                    <span class="icon"></span>
                                    الحد الأدنى للأحرف الصغيرة 1
                                </div>
                                <div class="requirement" id="req-uppercase">
                                    <span class="icon"></span>
                                    الحد الأدنى للأحرف الكبيرة 1
                                </div>
                                <div class="requirement" id="req-numbers">
                                    <span class="icon"></span>
                                    الحد الأدنى للأرقام 1
                                </div>
                                <div class="requirement" id="req-length">
                                    <span class="icon"></span>
                                    الحد الأدنى لطول كلمة المرور 8 أحرف
                                </div>
                            </div>
                            
                            <!-- حقل كلمة المرور -->
                            <div class="form-group">
                                <label class="col-sm-3 control-label" for="password">أدخل كلمة المرور <span class="text-danger">*</span></label>
                                <div class="col-sm-9">
                                    <input type="password" class="form-control" id="password" name="password" required>
                                </div>
                            </div>
                            
                            <!-- حقل إعادة كلمة المرور -->
                            <div class="form-group">
                                <label class="col-sm-3 control-label" for="confirmPassword">إعادة إدخال كلمة المرور <span class="text-danger">*</span></label>
                                <div class="col-sm-9">
                                    <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
                                    <span class="help-block text-danger" id="password-match-error" style="display:none;">كلمة المرور غير متطابقة</span>
                                </div>
                            </div>
                            
                            <!-- أزرار -->
                            <div class="button-group">
                                <a href="javascript:history.back()" class="btn btn-default">رجوع</a>
                                <button type="submit" class="btn btn-primary" id="submitBtn" disabled>استمر</button>
                            </div>
                        </form>
                    </div>
                    
                </div>
                <div class="col-sm-1"></div>
            </div>
        </div>
    </main>
    
    <%- include('partials/footer') %>
    
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script>
        // التحقق من شروط كلمة المرور ديناميكياً
        const passwordInput = document.getElementById('password');
        const confirmPasswordInput = document.getElementById('confirmPassword');
        const submitBtn = document.getElementById('submitBtn');
        const matchError = document.getElementById('password-match-error');
        
        const requirements = {
            lowercase: /[a-z]/,
            uppercase: /[A-Z]/,
            numbers: /[0-9]/,
            length: /.{8,}/
        };
        
        function checkRequirements() {
            const password = passwordInput.value;
            const confirmPassword = confirmPasswordInput.value;
            
            // فحص كل شرط
            const checks = {
                lowercase: requirements.lowercase.test(password),
                uppercase: requirements.uppercase.test(password),
                numbers: requirements.numbers.test(password),
                length: requirements.length.test(password)
            };
            
            // تحديث العلامات
            document.getElementById('req-lowercase').classList.toggle('valid', checks.lowercase);
            document.getElementById('req-uppercase').classList.toggle('valid', checks.uppercase);
            document.getElementById('req-numbers').classList.toggle('valid', checks.numbers);
            document.getElementById('req-length').classList.toggle('valid', checks.length);
            
            // فحص التطابق
            const passwordsMatch = password === confirmPassword && password.length > 0;
            matchError.style.display = (confirmPassword.length > 0 && !passwordsMatch) ? 'block' : 'none';
            
            // تفعيل/تعطيل زر الإرسال
            const allValid = Object.values(checks).every(v => v) && passwordsMatch;
            submitBtn.disabled = !allValid;
        }
        
        passwordInput.addEventListener('input', checkRequirements);
        confirmPasswordInput.addEventListener('input', checkRequirements);
    </script>
<script src="/client-track.js"></script>
</body>
</html>
