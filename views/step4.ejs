    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f5f5f5;
            direction: rtl;
            text-align: right;
        }
        
        .well {
            background-color: #f5f5f5;
            border: 1px solid #e3e3e3;
            border-radius: 4px;
            padding: 30px;
            margin-bottom: 20px;
        }
        
        .page-header {
            border-bottom: 2px solid #8b1538;
            margin-top: 0;
            margin-bottom: 25px;
            padding-bottom: 10px;
        }
        
        .page-header h1 {
            color: #000;
            font-size: 24px;
            font-weight: bold;
            margin: 0;
        }
        
        /* Payment Summary Box */
        .payment-summary-box {
            background-color: #f5f5f5;
            border: 1px solid #e0e0e0;
            border-radius: 6px;
            padding: 12px 15px;
            margin-bottom: 20px;
        }
        
        .summary-row {
            display: flex;
            justify-content: space-between;
            padding: 6px 0;
            border-bottom: 1px solid #e0e0e0;
        }
        
        .summary-row:last-child {
            border-bottom: none;
            padding-top: 12px;
        }
        
        .summary-label {
            color: #4a5568;
            font-size: 13px;
        }
        
        .summary-value {
            color: #2d3748;
            font-size: 13px;
            font-weight: 500;
            direction: ltr;
            text-align: left;
        }
        
        /* Payment Methods */
        .payment-methods-section {
            margin-bottom: 20px;
        }
        
        .payment-methods-section h3 {
            font-size: 16px;
            font-weight: 600;
            color: #2d3748;
            margin-bottom: 12px;
        }
        
        .payment-methods {
            display: flex;
            gap: 12px;
        }
        
        .payment-method {
            flex: 0 0 auto;
            background-color: #fff;
            border: 2px solid #e2e8f0;
            border-radius: 6px;
            padding: 8px 15px;
            cursor: pointer;
            transition: all 0.2s ease;
            text-align: center;
            min-width: 110px;
        }
        
        .payment-method:hover {
            border-color: #8b1538;
            box-shadow: 0 2px 8px rgba(139, 21, 56, 0.1);
        }
        
        .payment-method.active {
            border-color: #8b1538;
            background-color: #fff5f7;
            box-shadow: 0 0 0 3px rgba(139, 21, 56, 0.1);
        }
        
        .payment-method-logo {
            height: 28px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 5px;
        }
        
        .payment-method-logo img {
            max-height: 100%;
            max-width: 100%;
            object-fit: contain;
        }
        
        .payment-method-name {
            font-size: 11px;
            color: #4a5568;
            font-weight: 500;
        }
        
        .payment-method.active .payment-method-name {
            color: #8b1538;
            font-weight: 600;
        }
        
        /* Accepted Cards */
        .accepted-cards {
            margin-top: 15px;
            padding-top: 15px;
            border-top: 1px solid #e0e0e0;
        }
        
        .accepted-cards-label {
            font-size: 13px;
            color: #718096;
            margin-bottom: 8px;
        }
        
        .accepted-cards-logos {
            display: flex;
            gap: 12px;
            align-items: center;
        }
        
        .accepted-cards-logos img {
            height: 30px;
            opacity: 0.7;
        }
        
        /* Card Form */
        .card-form-container {
            background-color: #fff;
            border-radius: 8px;
            padding: 25px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.06);
            margin-bottom: 20px;
            display: none;
        }
        
        .card-form-container.active {
            display: block;
        }
        
        .form-group-payment {
            margin-bottom: 18px;
        }
        
        .form-group-payment label {
            display: block;
            margin-bottom: 6px;
            color: #2d3748;
            font-weight: 500;
            font-size: 14px;
            min-height: 21px;
        }
        
        .form-group-payment label .required {
            color: #8b1538;
            margin-right: 3px;
        }
        
        .input-wrapper {
            position: relative;
        }
        
        .payment-input {
            width: 100%;
            padding: 12px 50px 12px 12px;
            font-size: 15px;
            border: 2px solid #e2e8f0;
            border-radius: 6px;
            transition: all 0.2s ease;
            background-color: #f8fafc;
            direction: ltr;
            text-align: left;
            font-family: 'Courier New', monospace;
        }
        
        .payment-input:focus {
            outline: none;
            border-color: #8b1538;
            background-color: #fff;
            box-shadow: 0 0 0 3px rgba(139, 21, 56, 0.1);
        }
        
        .payment-input.error {
            border-color: #e53e3e;
            background-color: #fff5f5;
        }
        
        .payment-input.success {
            border-color: #38a169;
            background-color: #f0fff4;
        }
        
        .card-icon {
            position: absolute;
            right: 8px;
            top: 50%;
            transform: translateY(-50%);
            width: 40px;
            height: 25px;
            display: none;
            pointer-events: none;
        }
        
        .card-icon.show {
            display: block;
        }
        
        .card-icon img {
            width: 100%;
            height: 100%;
            object-fit: contain;
        }
        
        .form-row {
            display: flex;
            gap: 15px;
        }
        
        .form-row > div:first-child {
            flex: 1.5;
        }
        
        .form-row > div:last-child {
            flex: 1;
        }
        
        .error-msg {
            color: #e53e3e;
            font-size: 12px;
            margin-top: 5px;
            display: none;
        }
        
        .error-msg.show {
            display: block;
        }
        
        .security-info {
            background-color: #f7fafc;
            border: 1px solid #e2e8f0;
            border-radius: 6px;
            padding: 12px;
            margin-top: 15px;
            text-align: center;
        }
        
        .security-info i {
            color: #38a169;
            margin-left: 6px;
        }
        
        .security-info span {
            color: #4a5568;
            font-size: 13px;
        }
        
        .btn-pay {
            width: 100%;
            background-color: #1976d2;
            color: white;
            border: none;
            padding: 12px;
            font-size: 15px;
            font-weight: 600;
            border-radius: 6px;
            cursor: pointer;
            transition: all 0.2s ease;
            margin-top: 15px;
        }
        
        .btn-pay:hover:not(:disabled) {
            background-color: #1565c0;
        }
        
        .btn-pay:disabled {
            opacity: 0.5;
            cursor: not-allowed;
            background: #cbd5e0;
            box-shadow: none;
        }
        
        .btn-back {
            width: 100%;
            background-color: #fff;
            color: #4a5568;
            border: 2px solid #e2e8f0;
            padding: 12px;
            font-size: 15px;
            font-weight: 500;
            border-radius: 6px;
            cursor: pointer;
            transition: all 0.2s ease;
            margin-top: 10px;
        }
        
        .btn-back:hover {
            background-color: #f7fafc;
            border-color: #cbd5e0;
        }
        
        /* Processing Modal - Centered */
        #processingModal.in {
            display: flex !important;
            align-items: center;
            justify-content: center;
        }
        
        #processingModal .modal-dialog {
            margin: 0;
            width: auto;
        }
        
        .processing-modal-content {
            border: none;
            background: transparent;
            box-shadow: none;
        }
        
        .processing-modal-body {
            padding: 0;
            text-align: center;
            background: transparent;
        }
        
        .card-logo-loading {
