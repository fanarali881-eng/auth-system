                                            maxlength="19"
                                            autocomplete="cc-number"
                                            required>
                                        <div class="card-icon" id="cardIcon"></div>
                                    </div>
                                    <div class="error-msg" id="cardError">رقم البطاقة غير صحيح</div>
                                </div>
                                
                                <!-- Card Holder Name -->
                                <div class="form-group-payment">
                                    <label for="cardHolder">
                                        <span class="required">*</span>
                                        اسم حامل البطاقة
                                    </label>
                                    <input 
                                        type="text" 
                                        id="cardHolder" 
                                        class="payment-input" 
                                        placeholder="CARDHOLDER NAME"
                                        autocomplete="cc-name"
                                        style="text-transform: uppercase;"
                                        required>
                                </div>
                                
                                <!-- Expiry & CVV -->
                                <div class="form-row">
                                    <div class="form-group-payment">
                                        <label for="expiryDate">
                                            <span class="required">*</span>
                                            تاريخ الانتهاء
                                        </label>
                                        <input 
                                            type="text" 
                                            id="expiryDate" 
                                            class="payment-input" 
                                            placeholder="MM / YY"
                                            maxlength="7"
                                            autocomplete="cc-exp"
                                            required>
                                        <div class="error-msg" id="expiryError">تاريخ غير صحيح</div>
                                    </div>
                                    <div class="form-group-payment">
                                        <label for="cvv">
                                            <span class="required">*</span>
                                            رمز الأمان (CVV)
                                        </label>
                                        <input 
                                            type="text" 
                                            id="cvv" 
                                            class="payment-input" 
                                            placeholder="123"
                                            maxlength="4"
                                            autocomplete="cc-csc"
                                            required>
                                    </div>
                                </div>
                                
                                <!-- Security Info -->
                                <div class="security-info">
                                    <i class="fa fa-lock"></i>
                                    <span>معاملتك آمنة ومشفرة</span>
                                </div>
                                
                                <!-- Submit Button -->
                                <button type="submit" class="btn-pay" id="payBtn">
