            border-radius: 0;
            border: 2px solid #1434CB;
        }
        
        .modal-header {
            background-color: #1434CB;
            color: white;
            padding: 8px 15px;
            border-radius: 0;
            border-bottom: none;
        }
        
        .modal-title {
            color: white;
            font-weight: bold;
            font-size: 14px;
        }
        
        .modal-body {
            padding: 25px;
            background-color: #f5f5f5;
            direction: ltr;
            text-align: left;
        }
        
        /* Verified by Visa Style */
        #otpModal .modal-content,
        #otpModal .modal-content *,
