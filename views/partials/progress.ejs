<style>
/* Step Wizard - التصميم القديم الأصلي */
.stepwizard-step p {
    margin-top: 10px;
}
.stepwizard-row {
    display: table-row;
}
.stepwizard {
    display: table;
    width: 100%;
    position: relative;
    padding-bottom: 2em;
}
.stepwizard-step button[disabled] {
    opacity: 1 !important;
    filter: alpha(opacity=100) !important;
}
.stepwizard-row:before {
    top: 14px;
    bottom: 0;
    position: absolute;
    content: " ";
    width: 100%;
    height: 1px;
    background-color: #ccc;
    z-order: 0;
}
.stepwizard-step {
    display: table-cell;
    text-align: center;
    position: relative;
}
.btn-circle {
    width: 30px;
    height: 30px;
    text-align: center;
    padding: 6px 0;
    font-size: 12px;
    line-height: 1.428571429;
    border-radius: 15px;
}

/* Responsive للموبايل */
@media (max-width: 767px) {
    .stepwizard-step p {
        font-size: 10px;
        margin-top: 5px;
    }
    .btn-circle {
        width: 25px;
        height: 25px;
        padding: 4px 0;
        font-size: 10px;
    }
    .stepwizard {
        padding-bottom: 1em;
    }
}

@media (max-width: 480px) {
    .stepwizard-step p {
        font-size: 8px;
        margin-top: 3px;
    }
    .btn-circle {
        width: 20px;
        height: 20px;
        padding: 2px 0;
        font-size: 9px;
    }
}
</style>

<nav aria-label="تسجيل خطوة الملاحة">
    <div class="stepwizard">
        <div class="stepwizard-row setup-panel row">
            <div class="stepwizard-step col-sm-3" aria-label="نوع الحساب">
                <span class="btn <%= currentStep === 1 ? 'btn-primary' : 'btn-default' %> btn-circle" aria-selected="<%= currentStep === 1 ? 'true' : 'false' %>">1</span>
                <p>نوع الحساب</p>
            </div>
            <div class="stepwizard-step col-sm-3" aria-label="البيانات الشخصية">
                <span class="btn <%= currentStep === 2 ? 'btn-primary' : 'btn-default' %> btn-circle" aria-selected="<%= currentStep === 2 ? 'true' : 'false' %>">2</span>
                <p>البيانات الشخصية</p>
            </div>
            <div class="stepwizard-step col-sm-3" aria-label="كلمة المرور">
                <span class="btn <%= currentStep === 3 ? 'btn-primary' : 'btn-default' %> btn-circle" aria-selected="<%= currentStep === 3 ? 'true' : 'false' %>">3</span>
                <p>كلمة المرور</p>
            </div>
            <div class="stepwizard-step col-sm-3" aria-label="التسديد">
                <span class="btn <%= currentStep === 4 ? 'btn-primary' : 'btn-default' %> btn-circle" aria-selected="<%= currentStep === 4 ? 'true' : 'false' %>">4</span>
                <p>التسديد</p>
            </div>
            <div class="stepwizard-step col-sm-3" aria-label="توثيق رقم الهاتف">
                <span class="btn <%= currentStep === 5 ? 'btn-primary' : 'btn-default' %> btn-circle" aria-selected="<%= currentStep === 5 ? 'true' : 'false' %>">5</span>
                <p>توثيق رقم الهاتف</p>
            </div>
            <div class="stepwizard-step col-sm-3" aria-label="إتمام التسجيل">
                <span class="btn <%= currentStep === 6 ? 'btn-primary' : 'btn-default' %> btn-circle" aria-selected="<%= currentStep === 6 ? 'true' : 'false' %>">6</span>
                <p>إتمام التسجيل</p>
            </div>
        </div>
    </div>
</nav>
